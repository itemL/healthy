
page{
  width: 750rpx;
  height: 100%;
}

.main_container{
  height: 100%;
  width: 100%;
}

.warn_showType_2{
  height: 100%;
  width: 750rpx;

  position: relative;
  top: 0rpx;
  left: 0rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.pullLoading{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.loading_view{
  width: 36rpx;
  height: 36rpx;
}

.loading_text{
  font-family: PingFangSc-Regular;
  font-size: 32rpx;
  color:#222222;
}

.refreshView{
  background-color: rgba(65, 130, 173, 0.267);
  width: 100%;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.movable_area{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;

}

.all_deal_button{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background-color:rgb(210, 222, 228);

  font-size: 60rpx;
  line-height: 100rpx;
  text-align: center;

  position: fixed;
  top: 0rpx;
  left: 0rpx;

  padding: 0;
}

.healthy_container{
  height: auto;
  width: auto;
  display: block;
}

.swiper_container{
  width: 100%;
  height:100%;
}

.healthy_container .first_title{

  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow: ellipsis;

  font-family: PingFangSc-Regular;
  font-size: 58rpx;
  color:#222222;
  line-height: 80rpx;
  max-width: 100%;
  white-space: 8rpx;
  text-align: left;

  margin-top: 18rpx;
}

.healthy_container .first_content{
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow: ellipsis;

  font-family: PingFangSc-Regular;
  font-size: 58rpx;
  color:red;
  line-height: 80rpx;
  max-width: 100%;
  white-space: 8rpx;
  text-align: left;

  margin-top: 18rpx;
}

.healthy_container .image{
  background-image: linear-gradient(-180deg,rgba(0,0,0,0.26) 0%,rgba(0,0,0,0,26) 100%);
  /* padding:30rpx; */

  border-radius: 8rpx;
  width: 100%;
  height: 378rpx;
  margin-top: 20rpx;
}

/*  */
.line_view{
  height: 10rpx;
  width: 100%;
  background: #f3f6f8;
}
/*  */
.bottom_container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  height: 100rpx;
}

.bottom_container .image_text_container{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 100%;

  position:relative;
}

.image_text_container .bottom_image{
  font-size: 50rpx;
  color: black;
  line-height: 100%;
}

.image_text_container .bottom_title{
  color: black;
  line-height: 100rpx;
  height: 100%;
  text-align: center;
  padding-left: 8rpx;
}